@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Admin - All Quotes";
}

<h1>Admin - All Quotes</h1>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email Address</th>
            <th>Quote</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var insuree in Model)
        {
            <tr>
                <td>@insuree.FirstName</td>
                <td>@insuree.LastName</td>
                <td>@insuree.EmailAddress</td>
                <td>@insuree.Quote.ToString("C")</td> <!-- Format as currency -->
            </tr>
        }
        @if (!Model.Any())
        {
            <tr>
                <td colspan="4" class="text-center">No quotes available</td>
            </tr>
        }
    </tbody>
</table>